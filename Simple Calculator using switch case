#include <stdio.h> int main() { 

char op; float a,b; 

printf("\n Enter the operand:"); scanf("%c",&op); 

printf("\n Enter the first number:"); scanf("%f",&a); 

printf("\n Enter the second number:"); scanf("%f",&b); 

switch(op) 

{ 

case '+': 

{ 

printf("%f+%f=%f",a,b,a+b); break; 

} 

case '-': 

{ 

printf("%f-%f=%f",a,b,a-b); break; 

} 

case '*': 

{ 

printf("%f*%f=%f",a,b,a*b); break; 

} 

case '/': 

{ 

printf("%f/%f=%f",a,b,a/b); break; 

} 

default: 

{ 

printf("Error! This operand is not available"); 

} 

} 

 
